{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}

<section class="intro">
  <div class="bg-image h-100" style="background-color: #f5f7fa;">
    <div class="mask d-flex align-items-center h-100">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="card shadow-2-strong">
              <div class="card-body p-0">
              <div class="container">
                <a class="btn btn-secondary" type="button" href="{{path('contact_add')}}"><i class="bi bi-plus">Ajouter un contact</i></a>
              </div>
                <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 700px">
                  <table class="table table-dark mb-0">
                    <thead style="background-color: #393939;">
                      <tr class="text-uppercase text-success">
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Détails</th>
                        <th scope="col">Modifier</th>
                        <th scope="col">Supprimer</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for contact in contacts %}
                        <tr>
                          <th scope="row">{{contact.id}}</th>
                          <td>{{contact.nom}}</td>
                          <td>{{contact.prenom}}</td>
                          <td>{{contact.email}}</td>
                          <td>{{contact.telephone}}</td>
                          <td><a class="btn btn-secondary" type="button" href="{{path('contact_details', {id: contact.id})}}"><i class="fa fa-search"></i></a></td>
                          <td><a class="btn btn-secondary" type="button" href="{{path('contact_edit', {id: contact.id})}}"><i class="bi bi-pencil-square"></i></a></td>
                          <td><a class="btn btn-secondary" onclick="return confirm('êtes vous sur ?')" type="button" href="{{path('contact_delete', {id: contact.id})}}"><i class="bi bi-trash"></i></a></td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}